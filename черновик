let popup = document.querySelector('.popup');
let popupWrapper = document.querySelector('.popup__wrapper');
let openPopupButtons = document.querySelectorAll('.profile__edit-button');
let closePopupButton = document.querySelector('.popup__close');
let profileUsername = document.querySelector('.profile__usermane');
let profileAbout = document.querySelector('.profile__about');
let formElement = document.querySelector('.popup__form');
let usernameInput = formElement.querySelector('.popup__input_username');
let jobInput = formElement.querySelector('.popup__input_job');

openPopupButtons.addEventListener ('click', function () {
  openPopup(popup);
});

function openPopupButtons (modal) {
  modal.classList.add('active')
}

function closePopup(evt) {
const closeBtn = evt.target;

if (closeBtn.classList.contains('popup__close')) {
  closeBtn.closest('.popup').classList.remove ('active');
}
}

